    <style name="CloudPhotoControlTextStyle">
        <item name="android:layout_marginTop">@dimen/cloud_photo_control_text_margin_top</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/cloud_photo_control_text_size</item>
