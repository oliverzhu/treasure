    <style name="FileManagerBase" parent="@android:style/Theme.Holo.Light">
    </style>

    <style name="FileNangerNoTitle" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FileManagerTabTheme" parent="@style/FileManagerBase">
        <item name="android:actionBarTabStyle">@style/FileManagerTabStyle</item>
        <item name="android:actionBarStyle">@style/FileManagerBarStyle</item>
