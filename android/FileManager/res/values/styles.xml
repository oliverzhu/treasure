    <style name="FileManagerActionModeStyle">
        <item name="android:background">@drawable/tinno_title_bg_holo_light</item>
        <item name="android:backgroundSplit">@drawable/tinno_bottom_action_bar</item>
        <item name="android:height">?android:attr/actionBarSize</item>
        <item name="android:titleTextStyle">@android:style/TextAppearance.Medium</item>
        <item name="android:subtitleTextStyle">@android:style/TextAppearance.Small</item>
    </style>
