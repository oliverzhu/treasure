<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ape="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.ape.onelogin.myos.widget.MyOSActionBar 
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/myos_widget_height"
        ape:simpleButton="false"
        ape:opetionMenu="false"/>
    
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/myos_password_modify_container"
            android:id="@+id/modify_container"
            android:visibility="gone"/>
        
        <include layout="@layout/myos_password_forget_container"
            android:id="@+id/forget_container"
            android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>
