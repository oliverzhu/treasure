<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:gravity="center"
    android:background="#ffe6e6e6">
    
    
    <LinearLayout 
        android:layout_width="200dp"
    	android:layout_height="80dp"
    	android:background="@drawable/m_item_selected"
        />
    
    <LinearLayout 
        android:layout_width="200dp"
    	android:layout_height="50dp"
    	android:background="@drawable/top_bar_bg"
        />
        
    <LinearLayout 
        android:layout_width="200dp"
    	android:layout_height="50dp"
    	android:background="@drawable/top_bar"
        >
    </LinearLayout>
    
    <TextView
	        android:id="@+id/btn"
	        android:layout_width="300dp"
	        android:layout_height="1dp"
	        android:background="@drawable/long_divider" />

    
    <com.home.ninepng.IcsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="100dp"
	    android:layout_height="55dp"
	    android:orientation="horizontal" 
	    >
	    <TextView
	        android:id="@+id/btn"
	        android:layout_width="50dp"
	        android:layout_height="fill_parent"
	        android:text="标题一"
	        android:gravity="center"
	        android:background="@drawable/selected_holo" />
	    <TextView
	        android:id="@+id/btn"
	        android:layout_width="50dp"
	        android:layout_height="fill_parent"
	        android:background="@drawable/selected_holo"
	        android:gravity="center"
	        android:text="标题二" />
	 </com.home.ninepng.IcsLinearLayout>

</LinearLayout>