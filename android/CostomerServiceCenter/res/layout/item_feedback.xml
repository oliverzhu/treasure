<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/feedbackContainer"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="12dip"
	    android:background="@drawable/view_selector">
		    <RelativeLayout
		        android:id="@+id/primaryContainer" 
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content">
		        <TextView 
			        android:id="@+id/feedback_primary" 
			        android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:layout_toLeftOf="@+id/commentDate"
			    	android:layout_marginLeft="8dip"
			    	android:layout_marginRight="8dip"
			    	android:textColor="@color/text_color_primary"
			    	android:textSize="@dimen/text_size_primary"
		    	/>
		        <TextView
		            android:id="@+id/commentDate" 
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_centerVertical="true"
			    	android:layout_marginRight="8dip"
			    	android:layout_alignParentRight="true"
			    	android:textColor="@color/text_color_summary"
			    	android:textSize="@dimen/small_text_size"
			    />
	    </RelativeLayout>
	    <RelativeLayout 
	        	android:id="@+id/summaryContainer"
	        	android:layout_below="@+id/primaryContainer"
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
	        >
		    <TextView 
		        android:id="@+id/feedback_secondary" 
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_toLeftOf="@+id/feedback_status"
		    	android:layout_marginLeft="8dip"
		    	android:layout_marginRight="8dip"
		    	android:ellipsize="end"
		    	android:maxLines="2"
		    	android:textColor="@color/text_color_summary"
		    	android:textSize="@dimen/text_size_summary"
		    	/>
		    
		    <TextView 
		        android:id="@+id/feedback_status" 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_toLeftOf="@+id/unread_tip"
		    	android:layout_marginLeft="8dip"
		    	android:layout_marginRight="8dip"
		    	android:paddingTop="2dip"
		    	android:paddingBottom="2dip"
		    	android:paddingLeft="4dip"
		    	android:paddingRight="4dip"
		    	android:ellipsize="end"
		    	android:maxLines="1"
		    	android:textColor="@color/text_color_primary"
		    	android:textSize="@dimen/small_text_size"
		    	android:background="@drawable/button_rounded_corners"
		    	/>
		    
		    <ProgressBar android:id="@+id/unread_progressbar"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				style="@android:style/Widget.ProgressBar.Small.Inverse" 
				android:layout_centerVertical="true"
		    	android:layout_marginRight="8dip"
		    	android:layout_alignParentRight="true"
		    	android:visibility="invisible"
				/>
		    <ImageView 
		        android:id="@+id/unread_tip" 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_centerVertical="true"
		    	android:layout_marginRight="8dip"
		    	android:layout_alignParentRight="true"
		    	android:src="@drawable/unread_tip"
		    	android:visibility="invisible"
		        />
	    </RelativeLayout>
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/feedbackChildContainer"
        android:layout_below="@+id/feedbackContainer"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
        />
    
    <ImageView 
        android:id="@+id/divider"
        android:layout_width="match_parent"
		android:layout_height="0.67dip"
		android:background="@drawable/divider_horizontal_dark"
		android:layout_marginLeft="12dip"
    	android:layout_marginRight="12dip"
		android:layout_below="@+id/feedbackChildContainer"
        />
</RelativeLayout>
