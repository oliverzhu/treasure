<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <!-- 
    <com.client.customerservicecenter.view.CircleImageView 
        android:id="@+id/avatar"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:background="@drawable/default_avatar"/>
     -->
    <RelativeLayout 
        android:id="@+id/container_time"
        android:layout_width="30dip"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/container_content"
        >
        <ImageView 
            android:id="@+id/img_time_indicator"
            android:layout_width="20dip"
        	android:layout_height="20dip"
        	android:src="@drawable/ic_time_indicator"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />
        
        <TextView
            android:id="@+id/divider_vertical"
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:layout_below="@+id/img_time_indicator"
            android:layout_centerHorizontal="true"
            android:background="@color/list_divider"
            />
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/container_content"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/container_time"
        android:paddingBottom="26dip"
        android:orientation="vertical">
        <RelativeLayout 
            android:layout_height="20dip"
        	android:layout_width="match_parent">
        	<TextView 
        	    android:id="@+id/date"
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_toLeftOf="@+id/userName"
        	    android:paddingLeft="6dip"
        	    android:textColor="@color/text_color_summary"
        	    android:textSize="@dimen/small_text_size"
        	    android:gravity="center_vertical"
        	    android:layout_centerVertical="true"/>
        	<TextView 
        	    android:id="@+id/userName"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_alignParentRight="true"
        	    android:paddingRight="6dip"
        	    android:textColor="@color/text_color_primary"
        	    android:textSize="@dimen/text_size_summary"
        	    android:gravity="center"
        	    android:layout_centerVertical="true"/>
        </RelativeLayout>
        
        <LinearLayout 
            android:layout_height="wrap_content"
        	android:layout_width="match_parent"
        	android:orientation="vertical"
        	>
            <RelativeLayout 
                android:layout_height="wrap_content"
        		android:layout_width="match_parent"
        		android:paddingTop="8dip"
        		android:paddingBottom="8dip"
        		android:paddingLeft="5dip"
        		android:paddingRight="5dip"
        		android:background="@drawable/background_feedback_faq_top">
        		<TextView 
	        	    android:id="@+id/label_feedback_type"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:paddingLeft="4dip"
	        	    android:text="@string/label_feedback_type"
	        	    android:textColor="@color/text_color_primary"
	        	    android:textSize="@dimen/text_size_primary"
	        	    android:layout_alignParentLeft="true"/>
        		<TextView 
	        	    android:id="@+id/feedback_type"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:layout_toRightOf="@+id/label_feedback_type"
	        	    android:textColor="@color/text_color_primary"
	        	    android:textSize="@dimen/text_size_primary"/>
            </RelativeLayout>
           	<LinearLayout 
           	    android:layout_height="wrap_content"
        		android:layout_width="match_parent"
        		android:background="@drawable/background_feedback_faq_bottom"
        		android:orientation="vertical">
	            <RelativeLayout 
	                android:layout_height="wrap_content"
	        		android:layout_width="match_parent"
	        		android:padding="5dip">
	                <TextView 
		        	    android:id="@+id/label_feedback_content"
		        	    android:layout_width="wrap_content"
		        	    android:layout_height="wrap_content"
		        	    android:paddingLeft="4dip"
		        	    android:text="@string/label_feedback_content"
		        	    android:textColor="@color/text_color_primary"
		        	    android:textSize="@dimen/text_size_primary"
		        	    android:layout_alignParentLeft="true"/>
	        		<TextView 
		        	    android:id="@+id/feedback_content"
		        	    android:layout_width="wrap_content"
		        	    android:layout_height="wrap_content"
		        	    android:paddingLeft="4dip"
		        	    android:paddingTop="4dip"
		        	    android:layout_below="@+id/label_feedback_content"
		        	    android:textColor="@color/text_color_summary"
		        	    android:textSize="@dimen/text_size_summary"/>
	            </RelativeLayout>
	            <HorizontalScrollView  
			        android:id="@+id/feedback_hsv"  
			        android:layout_width="match_parent"  
			        android:layout_height="wrap_content"  
			        android:paddingLeft="9dip"
			        android:paddingRight="9dip"
			        android:scrollbars="horizontal"
			        android:scrollbarStyle="outsideInset"
			        android:scrollbarFadeDuration="1500"
			        android:visibility="gone">
	        		<com.client.customerservicecenter.view.HSVLayout
			            android:id="@+id/pictureLayout"  
			            android:layout_width="wrap_content"  
			            android:layout_height="wrap_content" />  
	    			</HorizontalScrollView> 
	        	<TextView 
	        	    android:layout_height="0.5dip"
		        	android:layout_width="fill_parent"
		        	android:background="@color/list_divider"
		        	android:layout_marginTop="5dip"
		        	android:layout_marginBottom="5dip"/>
	        	
	        	<RelativeLayout 
	        	    android:padding="5dip"
	        	    android:layout_height="wrap_content"
	        		android:layout_width="match_parent">
	                <TextView 
		        	    android:id="@+id/label_feedback_answer"
		        	    android:layout_width="wrap_content"
		        	    android:layout_height="wrap_content"
		        	    android:paddingLeft="4dip"
		        	    android:text="@string/label_feedback_answer"
		        	    android:textColor="@color/tip"
		        	    android:textSize="@dimen/text_size_primary"
		        	    android:layout_alignParentLeft="true"/>
	        		<TextView 
		        	    android:id="@+id/feedback_answer"
		        	    android:layout_width="wrap_content"
		        	    android:layout_height="wrap_content"
		        	    android:paddingLeft="4dip"
		        	    android:paddingTop="4dip"
		        	    android:paddingBottom="4dip"
		        	    android:layout_below="@+id/label_feedback_answer"
		        	    android:textColor="@color/text_color_summary"
		        	    android:textSize="@dimen/text_size_summary"
		        	    />
	            </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
</RelativeLayout>
